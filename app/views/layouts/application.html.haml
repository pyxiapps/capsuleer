!!!
%html
  %head{:lang => "en"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Capsuleer"
      %meta{:content => content_for?(:description) ? yield(:description) : "Capsuleer", :name => "description"}
        = stylesheet_link_tag "bootstrap.min", :media => "all"
        = stylesheet_link_tag "bootstrap-responsive.min", :media => "all"
        = stylesheet_link_tag "fullcalendar", :media => "all"
        = stylesheet_link_tag "unicorn.main", :media => "all"
        = stylesheet_link_tag "unicorn.grey.css", :media => "all", :class => "skin-color"
        = javascript_include_tag "application","excanvas.min","jquery.ui.custom","jquery.peity.min","fullcalendar.min","unicorn","unicorn.dashboard"
        / ,"jquery.flot.resize.min","jquery.flot.min.js"
        = csrf_meta_tags
        = yield(:head)
  %body
    = render "shared/header"
    = render "shared/search"
    = render "shared/user_nav"
    = render "shared/main_side_bar"
    #content
      = render "shared/content_header"
      = render "shared/breadcrumbs"
      .container-fluid
        = yield
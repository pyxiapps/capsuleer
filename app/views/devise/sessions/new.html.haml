.row-fluid
  .span3
  .span6
    = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal well" } ) do |f|
      %legend
        Log in
      %div.control-group
        = f.label :email, :class => 'control-label', :for => 'user_email'
        .controls
          = f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => 'span10'
      %div.control-group
        = f.label :password, :class => 'control-label', :for => 'user_password'
        .controls
          = f.password_field :password, :placeholder => 'Password', :class => 'span10'
      - if devise_mapping.rememberable?
        %div.form-actions
          = f.label :remember_me, :class => 'checkbox' do
            = f.check_box :remember_me
            Remember me
          = f.submit "Sign in", :class => 'btn'
        = render "devise/shared/links"
  .span3